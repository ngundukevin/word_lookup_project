<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/page2Btn"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="92dp"
        android:text="Page Two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page1Btn" />

    <Button
        android:id="@+id/page1Btn"
        android:layout_width="139dp"
        android:layout_height="56dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="196dp"
        android:text="Page One"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/page3Btn"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:text="Page Three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page2Btn"
        app:layout_constraintVertical_bias="0.174" />

</androidx.constraintlayout.widget.ConstraintLayout>